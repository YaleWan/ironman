{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "skipLibCheck": true, // 跳过所有声明文件的类型检查
    "experimentalDecorators": true, // 启用对ES装饰器的实验性支持
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true, // 不允许对同一个文件使用不一致格式的引用
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      /*路径映射的集合*/
      "@public/*": ["public/*"],
      "@app/*": ["app/*"],
      "@assets/*": ["app/assets/*"],
      "@styles/*": ["app/assets/styles/*"],
      "@common/*": ["app/common/*"],
      "@components/*": ["app/components/*"],
      "@library/*": ["app/library/*"],
      "@routes/*": ["app/routes/*"],
      "@store/*": ["app/store/*"],
      "@server/*": ["app/server/*"],
      "@api/*": ["app/server/api/*"],
      "@utils/*": ["app/utils/*"]
    }
  },
  "exclude": [
    "test",
    "release",
    "app/main.prod.js",
    "app/renderer.prod.js",
    "app/dist",
    "dll"
  ]
}
